<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingVertical="0dp">

        <!-- Background Gradient Overlay - Remove as we apply it to root -->
        <!-- 
        <View
            android:id="@+id/background_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_background"
            android:alpha="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        -->

        <!-- Illustration/Logo Area -->
        <ImageView
            android:id="@+id/login_illustration"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Login illustration"
            android:scaleType="centerCrop"
            android:src="@drawable/login_illustration"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title Section -->
        <TextView
            android:id="@+id/title_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_back"
            android:textColor="@color/primary_text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/login_illustration"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/subtitle_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/welcome_subtitle"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/title_welcome"
            app:layout_constraintStart_toStartOf="@id/title_welcome" />

        <!-- Username Field -->
        <TextView
            android:id="@+id/label_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/username"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/subtitle_welcome"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_user"
            app:startIconTint="@color/secondary_text"
            app:layout_constraintTop_toBottomOf="@id/label_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Field -->
        <TextView
            android:id="@+id/label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/password"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/username_input_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_password"
            app:startIconTint="@color/secondary_text"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/secondary_text"
            app:layout_constraintTop_toBottomOf="@id/label_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/forgot_password"
            android:textColor="@color/secondary_text"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_gradient"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/forgot_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Or Continue With -->
        <LinearLayout
            android:id="@+id/or_continue_with_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/sign_in_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/divider_line" />

            <TextView
                android:id="@+id/or_continue_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/or_continue_with"
                android:textColor="@color/accent_text"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/divider_line"
                android:rotation="180" />

        </LinearLayout>

        <!-- Social Login Buttons -->
        <LinearLayout
            android:id="@+id/social_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/or_continue_with_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/social_button_background"
                android:src="@drawable/ic_google"
                android:contentDescription="Sign in with Google"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_linkedin"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/social_button_background"
                android:src="@drawable/ic_linkedin"
                android:contentDescription="Sign in with LinkedIn"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_apple"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:background="@drawable/social_button_background"
                android:src="@drawable/ic_apple"
                android:contentDescription="Sign in with Apple"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Sign Up Link -->
        <TextView
            android:id="@+id/sign_up_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/dont_have_account"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/social_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
