<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingVertical="0dp">

        <!-- Background Gradient Overlay - Remove as we apply it to root -->
        <!-- 
        <View
            android:id="@+id/background_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_background"
            android:alpha="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        -->

        <!-- Illustration/Logo Area -->
        <FrameLayout
            android:id="@+id/register_illustration_container"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ImageView
                android:id="@+id/register_illustration"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_gravity="top|center_horizontal"
                android:contentDescription="Register illustration"
                android:scaleType="centerCrop"
                android:src="@drawable/register_illustration" />
                
        </FrameLayout>

        <!-- Title Section -->
        <TextView
            android:id="@+id/title_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/get_started_free"
            android:textColor="@color/primary_text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/register_illustration_container"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/subtitle_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/register_subtitle"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/title_register"
            app:layout_constraintStart_toStartOf="@id/title_register" />

        <!-- Email Field -->
        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/email_address"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/subtitle_register"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/secondary_text"
            app:layout_constraintTop_toBottomOf="@id/label_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="@string/email_placeholder"
                android:inputType="textEmailAddress"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Name Field -->
        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/your_name"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/email_input_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_user"
            app:startIconTint="@color/secondary_text"
            app:layout_constraintTop_toBottomOf="@id/label_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="@string/name_placeholder"
                android:inputType="textPersonName"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Field -->
        <TextView
            android:id="@+id/label_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/password"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/name_input_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="none"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_password"
            app:startIconTint="@color/secondary_text"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/secondary_text"
            app:layout_constraintTop_toBottomOf="@id/label_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:textColor="@color/secondary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Strength Indicator -->
        <LinearLayout
            android:id="@+id/password_strength_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="120dp">

            <TextView
                android:id="@+id/password_strength_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_strength_strong"
                android:textColor="@color/password_strong_text"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/strength_bar_1"
                    android:layout_width="11dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/password_strong"
                    android:alpha="0.5" />

                <View
                    android:id="@+id/strength_bar_2"
                    android:layout_width="11dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/password_medium"
                    android:alpha="0.8" />

                <View
                    android:id="@+id/strength_bar_3"
                    android:layout_width="11dp"
                    android:layout_height="2dp"
                    android:background="@color/password_strong" />

            </LinearLayout>

        </LinearLayout>

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_gradient"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/password_strength_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Or Sign Up With -->
        <LinearLayout
            android:id="@+id/or_sign_up_with_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/sign_up_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/divider_line" />

            <TextView
                android:id="@+id/or_sign_up_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/or_sign_up_with"
                android:textColor="@color/accent_text"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/divider_line"
                android:rotation="180" />

        </LinearLayout>

        <!-- Social Login Buttons -->
        <LinearLayout
            android:id="@+id/social_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/or_sign_up_with_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/social_button_background"
                android:src="@drawable/ic_google"
                android:contentDescription="Sign up with Google"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_linkedin"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/social_button_background"
                android:src="@drawable/ic_linkedin"
                android:contentDescription="Sign up with LinkedIn"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_apple"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:background="@drawable/social_button_background"
                android:src="@drawable/ic_apple"
                android:contentDescription="Sign up with Apple"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Sign In Link -->
        <TextView
            android:id="@+id/sign_in_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/already_have_account"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/social_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
